                                    a(href="#") Светлановский 48 к4
                        .addresses__item
                            ul.addresses-list
                                li.addresses-list__item.addresses-list__item--green
                                    a(href="#") 9-я линия В.О. д 16
                                li.addresses-list__item.addresses-list__item--red
                                    a(href="#") Пр. Просвещения 74\2
                                li.addresses-list__item.addresses-list__item--red
                                    a(href="#") Пр.Науки 23
                    .download 
                        a.download__apple(href="") 
                            img(src="img/apple.svg", alt="")
                        a.download__android(href="") 
                            img(src="img/google.svg", alt="")
                    .footer__bottom
                        a.footer__doc(href="#") Юридические документы
                        ul.social-list
                            li.social-list__item 
                                a(href="#")
                                    img(src="img/social/instagram.svg", alt="инстаграм")
                            li.social-list__item 
                                a(href="#")
                                    img(src="img/social/vk.svg", alt="ВК")
                            li.social-list__item 
                                a(href="#")
                                    img(src="img/social/email.svg", alt="Почта")
